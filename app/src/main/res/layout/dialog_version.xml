<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@drawable/bg_corner_white"
    android:layout_width="@dimen/margin_252"
    android:layout_height="wrap_content">
    <TextView
        android:paddingTop="@dimen/margin_8"
        android:gravity="center"
        android:text="@string/appHasNewUpdate"
        android:textColor="@color/colorText"
        android:textSize="@dimen/font_size_16"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:layout_marginTop="@dimen/margin_1"
        android:layout_marginLeft="@dimen/margin_1"
        android:layout_marginRight="@dimen/margin_1"
        android:paddingTop="@dimen/margin_12"
        android:paddingBottom="@dimen/margin_12"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bottom_border_white"
        android:orientation="vertical">
        <LinearLayout
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:paddingLeft="@dimen/margin_12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/font_size_14"
                android:textColor="@color/colorText"/>
            <TextView
                android:paddingRight="@dimen/margin_12"
                android:id="@+id/dv_newest_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/font_size_14"
                android:textColor="@color/colorText"/>
        </LinearLayout>
        <TextView
            android:layout_gravity="center_horizontal"
            android:id="@+id/dv_content_txt"
            android:paddingLeft="@dimen/margin_12"
            android:paddingRight="@dimen/margin_12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/font_size_14"
            android:text="1、功能升级优化"
            android:textColor="@color/colorText"/>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/dv_update_lyt"
            android:visibility="gone"
            android:layout_marginBottom="@dimen/margin_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/dv_cancel_txt"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="@string/UpdateLater"
                style="@style/PopBlueChooseStyle" />
            <TextView
                android:id="@+id/dv_update_txt"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="@string/nowUpdate"
                android:layout_marginRight="@dimen/margin_1"
                android:background="@drawable/left_border_white"
                style="@style/PopBlueChooseStyle" />
        </LinearLayout>
        <TextView
            android:visibility="gone"
            android:id="@+id/dv_compulsive_update_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/nowUpdate"
            style="@style/PopBlueChooseStyle" />
    </RelativeLayout>
</LinearLayout>