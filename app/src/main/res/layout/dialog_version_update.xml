<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@drawable/bg_corner_white"
    android:layout_width="@dimen/margin_252"
    android:layout_height="wrap_content">
    <TextView
        android:paddingTop="@dimen/margin_8"
        android:paddingBottom="@dimen/margin_8"
        android:gravity="center"
        android:text="@string/download"
        android:textColor="@color/colorBlue"
        android:textSize="@dimen/font_size_18"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:layout_marginTop="@dimen/margin_1"
        android:layout_marginLeft="@dimen/margin_1"
        android:layout_marginRight="@dimen/margin_1"
        android:paddingTop="@dimen/margin_15"
        android:paddingBottom="@dimen/margin_16"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/top_bottom_border_white"
        android:orientation="vertical">
        <TextView
            android:id="@+id/dd_downloading_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_24"
            android:text="@string/downloading"/>
        <LinearLayout
            android:layout_marginTop="@dimen/margin_15"
            android:id="@+id/dd_downloading_lyt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <ProgressBar
                android:id="@+id/dd_downloading_pab"
                android:layout_width="match_parent"
                android:layout_height="@dimen/margin_5"
                android:indeterminateOnly="false"
                android:layout_marginLeft="@dimen/margin_24"
                android:layout_marginRight="@dimen/margin_24"
                android:progressDrawable="@drawable/progress_drawable"
                android:mirrorForRtl="true"
                android:maxHeight="@dimen/margin_20"
                android:minHeight="@dimen/margin_20"/>
            <RelativeLayout
                android:layout_marginTop="@dimen/margin_3"
                android:layout_marginLeft="@dimen/margin_24"
                android:layout_marginRight="@dimen/margin_24"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/dd_percent_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorTime"
                    android:textSize="@dimen/font_size_10"
                    android:text="0%"/>
                <TextView
                    android:id="@+id/dd_total_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorTime"
                    android:layout_alignParentRight="true"
                    android:textSize="@dimen/font_size_10"/>
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>