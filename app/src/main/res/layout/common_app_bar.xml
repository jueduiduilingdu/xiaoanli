<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/title_bar"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <!--    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/title_height"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true">-->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_height"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true">
        <!--android:layout_marginTop="@dimen/margin_10"-->

        <ImageButton
            android:id="@+id/actionbar_back"
            android:layout_width="@dimen/margin_45"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:background="@null"
            android:src="@mipmap/back_btn_gray" />

        <TextView
            android:id="@+id/title_tv_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:ellipsize="end"
            android:maxEms="10"
            android:singleLine="true"
            android:text="@string/app_name"
            android:textColor="@color/colorTitle"
            android:textSize="@dimen/font_size_18" />

        <TextView
            android:id="@+id/title_right"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:paddingLeft="@dimen/margin_24"
            android:paddingRight="@dimen/margin_12"
            android:textColor="@color/colorTitle"
            android:textSize="@dimen/font_size_14"
            android:visibility="gone" />
        <!--该控件的边距以及大小还没有调整，使用之前调整好大小-->
        <ImageButton
            android:id="@+id/title_iv_right"
            android:layout_width="@dimen/margin_60"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:background="@null"
            android:visibility="gone" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_2"
            android:layout_alignParentBottom="true"
            android:background="@color/colorContentBg" />
    </RelativeLayout>
</RelativeLayout>