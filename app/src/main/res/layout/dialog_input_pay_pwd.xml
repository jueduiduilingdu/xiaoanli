<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/colorWhite"
    android:layout_width="300dp"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:background="@drawable/bottom_border_white"
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_45">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorText"
            android:textSize="@dimen/font_size_16"
            android:text="@string/inputPayPassword"
            android:layout_centerInParent="true"/>
        <ImageButton
            android:id="@+id/close_img"
            android:layout_width="@dimen/margin_45"
            android:layout_height="match_parent"
            android:background="@null"
            android:src="@mipmap/icon_grey_delete"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>

    <com.ahapp.huantianxidi.view.ClearEditText
        android:id="@+id/pwd_et"
        android:maxLines="1"
        android:imeOptions="actionGo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_24"
        android:layout_marginRight="@dimen/margin_24"
        android:layout_marginTop="@dimen/margin_24"
        android:layout_marginBottom="@dimen/margin_12"
        android:inputType="textPassword"
        android:padding="@dimen/margin_12"
        android:textColor="@color/colorText"
        android:textSize="@dimen/font_size_16"
        android:background="@drawable/bg_corner_border"/>
    <TextView
        android:id="@+id/forget_tv"
        android:layout_marginBottom="@dimen/margin_12"
        android:layout_marginRight="@dimen/margin_24"
        android:layout_gravity="right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorText"
        android:textSize="@dimen/font_size_14"
        android:text="@string/forgetPwd"
        android:layout_centerInParent="true"/>
</LinearLayout>