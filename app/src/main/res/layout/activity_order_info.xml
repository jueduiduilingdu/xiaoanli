<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorContentBg"
    android:orientation="vertical">

    <include layout="@layout/common_app_bar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginBottom="@dimen/margin_12">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/margin_12"
                android:background="@color/white"
                android:orientation="vertical"
                android:gravity="center">

                <TextView
                    android:id="@+id/tv_order_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textSize="@dimen/font_size_14" />

                <TextView
                    android:id="@+id/tv_pay_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorTime"
                    android:textSize="@dimen/font_size_14"
                    android:layout_marginTop="@dimen/margin_6" />


            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_12"
                android:padding="@dimen/margin_12"
                android:background="@color/white">

                <TextView
                    android:id="@+id/foo_send_info_tv"
                    android:layout_alignParentRight="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textSize="@dimen/font_size_14" />

                <TextView
                    android:id="@+id/foo_delivery_address_tv"
                    android:layout_alignParentRight="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorTime"
                    android:textSize="@dimen/font_size_14"

                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/bottom_border"
                android:layout_marginTop="@dimen/margin_12">

                <TextView
                    android:id="@+id/foo_shop_name_tv"
                    android:background="@drawable/bottom_border"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/margin_12"
                    android:textColor="@color/colorText"
                    android:textSize="@dimen/font_size_16" />

                <com.ahapp.huantianxidi.view.MyListView
                    android:id="@+id/foo_good_list"
                    android:background="@color/white"
                    android:divider="@null"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>


            <RelativeLayout
                android:padding="@dimen/margin_12"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_12"
                android:background="@drawable/bottom_border">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorText"
                    android:textSize="@dimen/content_text_size_14"
                    android:text="@string/goods_total" />

                <TextView
                    android:id="@+id/foo_goods_price_tv"
                    android:layout_alignParentRight="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorRed"
                    android:textSize="@dimen/content_text_size_14" />
            </RelativeLayout>
            <RelativeLayout
                android:background="@drawable/bottom_border"
                android:padding="@dimen/margin_12"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorText"
                    android:textSize="@dimen/content_text_size_14"
                    android:text="@string/Distribution_fee" />

                <TextView
                    android:id="@+id/foo_delivery_fee_tv"
                    android:layout_alignParentRight="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorRed"
                    android:textSize="@dimen/content_text_size_14" />
            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/deposit_rl"
                android:background="@drawable/bottom_border"
                android:padding="@dimen/margin_12"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorText"
                    android:textSize="@dimen/content_text_size_14"
                    android:text="@string/Amount_of_payment" />

                <TextView
                    android:id="@+id/deposit_tv"
                    android:layout_alignParentRight="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorRed"
                    android:textSize="@dimen/content_text_size_14" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_coupon_price"
                android:background="@drawable/bottom_border"
                android:padding="@dimen/margin_12"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorText"
                    android:textSize="@dimen/content_text_size_14"
                    android:text="@string/coupon_price" />

                <TextView
                    android:id="@+id/tv_coupon"
                    android:layout_alignParentRight="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="@dimen/content_text_size_14" />
            </RelativeLayout>

            <RelativeLayout
                android:background="@drawable/bottom_border"
                android:padding="@dimen/margin_12"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorText"
                    android:textSize="@dimen/content_text_size_14"
                    android:text="@string/order_total" />

                <TextView
                    android:id="@+id/foo_order_price_tv"
                    android:layout_alignParentRight="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorRed"
                    android:textSize="@dimen/content_text_size_14" />
            </RelativeLayout>

            <RelativeLayout

                android:background="@drawable/bottom_border"
                android:padding="@dimen/margin_12"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorText"
                    android:textSize="@dimen/content_text_size_14"
                    android:text="@string/gift_integral" />

                <TextView
                    android:id="@+id/tv_gift_integral"
                    android:layout_alignParentRight="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="@dimen/content_text_size_14" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_remarks_ooi"
                android:background="@drawable/bottom_border"
                android:padding="@dimen/margin_12"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorText"
                    android:textSize="@dimen/content_text_size_14"
                    android:text="@string/notes" />

                <TextView
                    android:id="@+id/tv_remarks_ooi"
                    android:layout_alignParentRight="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="@dimen/content_text_size_14" />
            </RelativeLayout>

            <RelativeLayout
                android:background="@drawable/bottom_border"
                android:padding="@dimen/margin_12"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_12">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorText"
                    android:textSize="14sp"
                    android:text="订单编号" />

                <TextView
                    android:id="@+id/tv_order_number"
                    android:layout_alignParentRight="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorTime"
                    android:textSize="14sp" />
            </RelativeLayout>

            <RelativeLayout
                android:background="@drawable/bottom_border"
                android:padding="@dimen/margin_12"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorText"
                    android:textSize="14sp"
                    android:text="订单创建时间" />

                <TextView
                    android:id="@+id/tv_order_create_date"
                    android:layout_alignParentRight="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorTime"
                    android:textSize="14sp" />
            </RelativeLayout>


            <LinearLayout
                android:id="@+id/ll_courier"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="@dimen/margin_12">

                <RelativeLayout
                    android:background="@drawable/bottom_border"
                    android:padding="@dimen/margin_12"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorText"
                        android:textSize="14sp"
                        android:text="@string/Courier_number" />

                    <TextView
                        android:id="@+id/foo_delivery_number_tv"
                        android:layout_alignParentRight="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorTime"
                        android:textSize="14sp" />
                </RelativeLayout>

                <RelativeLayout
                    android:background="@drawable/bottom_border"
                    android:padding="@dimen/margin_12"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorText"
                        android:textSize="14sp"
                        android:text="快递名称" />

                    <TextView
                        android:id="@+id/foo_delivery_name_tv"
                        android:layout_alignParentRight="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorTime"
                        android:textSize="14sp" />
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_refund"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/margin_12"
                android:gravity="center|left"
                android:background="@drawable/bottom_border"
                android:visibility="gone">

                <TextView
                    android:id="@+id/tv_grounds"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorText"
                    android:textSize="@dimen/content_text_size_14"
                    android:text="@string/Grounds_for_refunds" />

                <TextView
                    android:id="@+id/tv_refund"
                    android:layout_weight="1"
                    android:layout_alignParentRight="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/content_text_size_14" />
            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>